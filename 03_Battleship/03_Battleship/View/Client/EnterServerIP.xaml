<UserControl x:Class="_03_Battleship.View.Client.EnterServerIP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_03_Battleship.View.Client"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="/View/GlobalResources.xaml" />
    </UserControl.Resources>
    <Grid>
        <StackPanel MaxWidth="500" VerticalAlignment="Center">
            <TextBlock Text="Enter Server IP" Style="{StaticResource ResourceKey=Mainheadline}" Margin="0 0 0 10" />
            <TextBox Text="127.0.0.1" Name="ServerIP" Margin="0 0 0 10" />
            <Button Content="OK" Command="{Binding ConnectToServerCommand}" CommandParameter="{Binding ElementName=ServerIP, Path=Text}" />
        </StackPanel>
    </Grid>
</UserControl>
