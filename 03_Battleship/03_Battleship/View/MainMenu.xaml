<UserControl x:Class="_03_Battleship.View.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_03_Battleship.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel MaxWidth="500" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <TextBlock FontSize="46" HorizontalAlignment="Center" Margin="0 0 0 30" FontWeight="ExtraBold">BATTLESHIP</TextBlock>
            <Button Margin="0 0 0 20" Command="{Binding ShowEnterServerIPCommand}">Play Battleship</Button>
            <Button Command="{Binding StartServerModeCommand}">Create a Server</Button>
        </StackPanel>
    </Grid>
</UserControl>
